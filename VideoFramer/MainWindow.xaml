<Window x:Class="VideoFramer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="462" Width="645">
    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Top" Margin="5">
                <StackPanel Orientation="Horizontal" >
                    <Button Name="startBtn" Visibility="{Binding StartVisible}" Content="Start" Margin="0,0,5,0"  HorizontalAlignment="Left"  VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.067,0.636"/>
                    <Button Name="stopBtn" Visibility="{Binding StopVisible}" Content="Stop" Margin="0,0,5,0" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="75"/>
                    <Label Content="FPS:"  VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <TextBox Name="fpsTb" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="30" VerticalAlignment="Top" Width="120"/>
                </StackPanel>
                <Label Content="Source:"  VerticalAlignment="Top" HorizontalAlignment="Left"/>
                <TextBox Name="sourceTb" Height="23"  TextWrapping="Wrap" 
                     Text="{Binding Video, Mode=OneWay}"
                     VerticalAlignment="Top"/>
                <Label Content="Output:"  VerticalAlignment="Top" HorizontalAlignment="Left"/>
                <TextBox Name="dirTb" Height="23" TextWrapping="Wrap" 
                     Text="{Binding OutputDirectory, Mode=OneWay}"
                     VerticalAlignment="Top"/>
            </StackPanel>
            <Border Background="Black" VerticalAlignment="Stretch" Height="Auto">
                <MediaElement Name="VideoControl" Source="{Binding ElementName=sourceTb, Path=Text}" IsMuted="True">
                </MediaElement>
            </Border>
       </DockPanel>
    </Grid>
</Window>
